class Solution {
public:
    int orangesRotting(vector<vector<int>>& grid) {
        queue<tuple<int,int,int>> q,temp;
        int time=0;
        int n=grid.size();
        int m=grid[0].size();
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<m;j++)
            {
                if(grid[i][j]==2)
                {
                    q.push({i,j,0});
                }
            }
        }
        while(!q.empty())
        {
            int i=get<0>(q.front());           
            int j=get<1>(q.front());
            int currTime=get<2>(q.front());
            q.pop();
            if(i+1<n && grid[i+1][j]==1)
            {
                q.push({i+1,j,currTime+1});
                grid[i+1][j]=2;   
            }
            if(i-1>=0 && grid[i-1][j]==1)
            {
                q.push({i-1,j,currTime+1});
                grid[i-1][j]=2;   
            }
            if(j+1<m && grid[i][j+1]==1)
            {
                q.push({i,j+1,currTime+1});
                grid[i][j+1]=2;   
            }
            if(j-1>=0 && grid[i][j-1]==1)
            {
                q.push({i,j-1,currTime+1});
                grid[i][j-1]=2;   
            }
            time=max(time,currTime);
        }

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (grid[i][j] == 1) return -1;
            }
        }

        return time;

    }
};