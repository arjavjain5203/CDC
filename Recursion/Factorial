#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    /*
    🔹 Problem Statement:
    Find the factorial of a given non-negative integer n using recursion.

    🔹 Approach:
    - Base case: if n == 0 or n == 1, return 1.
    - Recursive case: return n * factorial(n-1).

    ⚙️ Time Complexity: O(n), as there are n recursive calls
    ⚙️ Space Complexity: O(n), due to recursion stack
    */

    int factorial(int n) {
        if(n == 0 || n == 1) return 1; // Base case
        return n * factorial(n - 1);   // Recursive call
    }
};
